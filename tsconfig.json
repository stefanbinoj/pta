{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "nodenext",
        "allowImportingTsExtensions": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@pta/*": [
                "packages/*/src"
            ]
        }
    },
    "include": [
        "packages/*/src",
        "apps/*/src"
    ],
    "exclude": [
        "node_modules"
    ]
}
